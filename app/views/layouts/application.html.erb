      <li><%= link_to 'gallery',  gallery_path  %></li>
      <li><%= link_to 'archives', archives_path %></li>
      <li><%= link_to 'misc',     misc_path     %></li>
      <li><%= link_to 'about',    about_path    %></li>
    </ul>
  </nav> 
  <br>
